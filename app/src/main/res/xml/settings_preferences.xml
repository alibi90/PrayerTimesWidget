<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:key="calc_method"
        android:title="Calculation Method"
        android:entries="@array/calc_methods"
        android:entryValues="@array/calc_method_values"
        android:defaultValue="ISNA" />

    <SwitchPreferenceCompat
        android:key="notifications"
        android:title="Prayer Time Notifications"
        android:defaultValue="true" />

    <SwitchPreferenceCompat
        android:key="aod"
        android:title="Always-On Display (AOD)"
        android:defaultValue="false" />
</PreferenceScreen>
